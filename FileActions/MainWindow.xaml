<Window x:Class="FileActions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileActions"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <CheckBox Content="Zip" Name="zipCB" Margin="5 5 5 5"></CheckBox>
            <CheckBox Content="Hash" Name="hashCB" Margin="5 5 5 5"></CheckBox>
            <CheckBox Content="Copy" Name="copyCB" Margin="5 5 5 5"></CheckBox>
            <Button Content="Go!" Click="onGoButtonClicked" Margin="5 5 5 5"></Button>
        </StackPanel>

    </Grid>
</Window>
